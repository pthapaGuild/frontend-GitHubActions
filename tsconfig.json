{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    // "sourceMap": true,
    "outDir": "./lib",
    "allowJs": true,
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "types": [
      "node",
      "cypress"
      // "cypress-real-events",
      // "@testing-library/cypress",
      // "cypress-axe"
      // "@guildeducationinc/guild-cypress-axe"
    ]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["./node_modules"]
}
